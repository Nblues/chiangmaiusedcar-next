# ========== Development Settings ==========
CHOKIDAR_USEPOLLING=1
WATCHPACK_POLLING=1

# ========== Shopify Configuration ==========
SHOPIFY_DOMAIN=kn-goodcar.com
SHOPIFY_STOREFRONT_TOKEN=your_storefront_access_token_here

# ========== Site Configuration ==========
SITE_URL=https://chiangmaiusedcar.com

# ========== EmailJS Configuration (Required) ==========
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id_here
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id_here
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key_here

# ========== Google reCAPTCHA (Required) ==========
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here

# ========== Optional Services ==========
# Google Analytics (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Google Tag Manager (Optional)
NEXT_PUBLIC_GTM_ID=your_google_tag_manager_id

# Google Maps API (Optional)
MAPS_API_KEY=your_google_maps_api_key

# ========== Site Metadata (Optional) ==========
NEXT_PUBLIC_SITE_NAME=ครูหนึ่งรถสวย - รถมือสองเชียงใหม่
NEXT_PUBLIC_SITE_DESCRIPTION=ครูหนึ่งรถสวย ขายรถมือสองคุณภาพดี เชียงใหม่ ราคาดี มีรับประกัน ผ่อนง่าย ดูรถได้ทุกวัน
NEXT_PUBLIC_SITE_KEYWORDS=รถมือสอง,เชียงใหม่,ขายรถ,ผ่อนรถ,ครูหนึ่งรถสวย,รถราคาดี
NEXT_PUBLIC_SITE_AUTHOR=ครูหนึ่งรถสวย

# ========== Build Configuration ==========
NEXT_PUBLIC_BUILD_ENV=production
