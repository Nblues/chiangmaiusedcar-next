{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen"]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["scrollbar-width", "scrollbar-color"]
      }
    ],
    "value-no-vendor-prefix": [
      true,
      {
        "ignoreValues": ["-webkit-overflow-scrolling"]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme"]
      }
    ]
  }
}
