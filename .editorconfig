# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default indent to 2 spaces for most files
[*.{js,jsx,ts,tsx,json,css,scss,md,yml,yaml}]
indent_style = space
indent_size = 2

# Match specific files
[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Package.json
[package.json]
indent_size = 2

# Batch files (Windows)
[*.{cmd,bat}]
end_of_line = crlf

# Shell scripts
[*.sh]
end_of_line = lf
