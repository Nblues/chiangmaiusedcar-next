# Node.js & pnpm Configuration for 12GB RAM System
# Optimized for GitHub Copilot and modern development (2025)

# pnpm specific
auto-install-peers=true
strict-peer-dependencies=false
shamefully-hoist=true

# Performance optimization
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
maxsockets=20
network-timeout=300000

# Cache and locking
cache-min=10
prefer-offline=false
package-lock=true

# Logging
progress=true
loglevel=info

# Engine enforcement
engine-strict=true
