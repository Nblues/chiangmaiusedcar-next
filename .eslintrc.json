{
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["prettier", "react-hooks"],
  "rules": {
    "linebreak-style": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react/no-unknown-property": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",

    // Next.js rules
    "@next/next/no-img-element": "off",
    "@next/next/no-html-link-for-pages": "off",

    // A11Y rules
    "jsx-a11y/anchor-is-valid": "warn",
    "jsx-a11y/no-autofocus": "warn",
    "jsx-a11y/alt-text": "error",
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/label-has-associated-control": [
      "error",
      {
        "labelComponents": ["Label"],
        "labelAttributes": ["label", "htmlFor"],
        "controlComponents": ["Input", "Select", "Textarea", "input", "select", "textarea"],
        "assert": "either",
        "depth": 3
      }
    ],

    // TypeScript rules - Allow in development and CI
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-require-imports": "off",
    "@typescript-eslint/no-unused-expressions": "off",

    // General rules - Allow in development and CI
    "no-console": "warn",
    "no-debugger": "warn",
    "no-case-declarations": "warn",
    "no-undef": "warn",
    "no-control-regex": "off",
    "no-misleading-character-class": "off",
    "no-dupe-class-members": "warn",
    "no-dupe-keys": "error",
    "no-inner-declarations": "warn",
    "no-unused-expressions": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["scripts/**/*", "dev/scripts/**/*"],
      "rules": {
        "no-console": "off",
        "@typescript-eslint/no-require-imports": "off",
        "@typescript-eslint/no-var-requires": "off",
        "no-unused-vars": "off",
        "no-undef": "off"
      }
    },
    {
      "files": ["pages/api/**/*"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
