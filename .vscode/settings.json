{
  // TypeScript/JavaScript performance - Enhanced to prevent crashes
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.tsserver.useSeparateSyntaxServer": true,
  "typescript.tsserver.watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "**/.next",
      "**/out",
      "**/dist",
      "**/build",
      "**/logs",
      "**/backups",
      "**/backup_project_*",
      "**/lighthouse-prod-latest",
      "**/deployment_source"
    ]
  },
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.preferences.includeCompletionsWithSnippetText": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.tsserver.useSyntaxServer": "auto",
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // File associations for JSX in .js files
  "files.associations": {
    "*.js": "javascriptreact"
  },

  // ESLint configuration
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Editor performance
  "editor.semanticHighlighting.enabled": false,
  "editor.inlayHints.enabled": "off",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },

  // File watching optimization
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/out": true,
    "**/.git": true,
    "**/dist": true,
    "**/build": true,
    "**/.vercel": true,
    "**/.cache": true,
    "**/.turbo": true,
    "**/logs": true,
    "**/backups": true,
    "**/backup_project_*": true,
    "**/lighthouse-prod-latest": true,
    "**/deployment_source": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/out": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/.vercel": true,
    "**/.cache": true,
    "**/.turbo": true,
    "**/logs": true,
    "**/backups": true,
    "**/backup_project_*": true,
    "**/lighthouse-prod-latest": true,
    "**/deployment_source": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/out/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.vercel/**": true,
    "**/.cache/**": true,
    "**/.turbo/**": true,
    "**/logs/**": true,
    "**/backups/**": true,
    "**/backup_project_*/**": true,
    "**/lighthouse-prod-latest/**": true,
    "**/deployment_source/**": true
  },

  // Avoid pnpm symlink fan-out during search/indexing
  "search.followSymlinks": false,

  // Memory optimization - เพิ่ม RAM เต็มที่ (12GB RAM system)
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "javascript.suggest.enabled": true,
  "typescript.suggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "problems.decorations.enabled": true,
  
  // Disable problematic extensions features that may cause crashes
  "github.copilot.advanced": {},
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "postman.disableInlayHints": true,

  // Terminal settings
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.scrollback": 5000,

  // Git performance
  "git.enabled": true,
  "git.autorefresh": false,
  "git.autofetch": false,
  "git.statusLimit": 2000,
  "git.decorations.enabled": false,

  // Format and lint
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Next.js specific
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  // Disable webhint to prevent crashes
  "webhint.enable": false,
  
  // Tailwind CSS IntelliSense configuration
  "tailwindCSS.experimental.classRegex": [
    ["class[n]?Name[s]?\\s*[:=]\\s*['\"]([^'\"]*)['\"]", "([^'\"]*)"],
    ["tw`([^`]*)", "([^`]*)"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript",
    "javascript": "javascript",
    "javascriptreact": "javascript"
  },
  "tailwindCSS.validate": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.colorDecorators": false,
  "tailwindCSS.showPixelEquivalents": true,
  "tailwindCSS.rootFontSize": 16,

}
