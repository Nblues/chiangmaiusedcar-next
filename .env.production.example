# Production environment configuration
NODE_ENV=production
NEXT_PUBLIC_BUILD_ENV=production

# Shopify Configuration (use your actual values)
SHOPIFY_DOMAIN=kn-goodcar.myshopify.com
SHOPIFY_STOREFRONT_TOKEN=your_actual_token_here

# EmailJS Configuration (use your actual values)
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key

# Site Configuration
SITE_URL=https://www.chiangmaiusedcar.com
NEXT_PUBLIC_SITE_URL=https://www.chiangmaiusedcar.com

# Analytics
NEXT_PUBLIC_GA_ID=your_ga_id_if_any

# Security
# Admin auth (HMAC session)
ADMIN_USERNAME=change_me_in_prod
ADMIN_PASSWORD=change_me_strong
SESSION_SECRET=replace_with_64+_random_bytes

# reCAPTCHA
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret

# Cookie naming (no need to set; for reference only)
# In production, cookies are issued with __Host- prefix automatically.

# Build optimization
NEXT_TELEMETRY_DISABLED=1
