{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron/backup-daily",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/warm-catalog-cache",
      "schedule": "*/15 * * * *"
    }
  ]
}
